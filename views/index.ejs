<%- include('header') %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Autók</h1>
            <a href="/cars/new">
                <button class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i>
                    Új autó
                </button>
            </a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Utasok megjelenítése</th>
                    <th>Rendszám</th>
                    <th>Márka</th>
                    <th>Hossz</th>
                    <th>Kapacitás</th>
                    <th>Csomagtér</th>
                    <th>Kezelés</th>
                </tr>

                <% cars.forEach(function(car) { %>
                    <tr>
                        <td>
                            <a href="/passengers/<%= car._id %>">
                                <button class="btn btn-primary">
                                    Utasok
                                </button>
                            </a>
                        </td>
                        <td><%= car.plate %></td>
                        <td><%= car.brand %></td>
                        <td><%= car.length %> m</td>
                        <td><%= car.capacity %> fő</td>
                        <td><%= car.trunk %> l</td>
                        <td>
                            <a href="/cars/edit/<%= car._id %>">
                                <button class="btn btn-secondary">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </button>
                            </a>
                            <a href="/cars/del/<%= car._id %>">
                                <button class="btn btn-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </a>
                        </td>
                    </tr>
                    
                <% }); %>

            </table>
        </div>
    </div>
</div>

<%- include('footer') %>