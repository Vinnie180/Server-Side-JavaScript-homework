<%- include('header') %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Autó 
                <% if (typeof car === 'undefined') { %>létrehozás
                <% } else{ %>szerkesztés
                <% } %>
            </h1>
        </div>
    </div>
</div>

<div class="container">
    <form method="POST">
        <input type="hidden" name="id" value="<%= (typeof car === 'undefined') ? '' : car._id %>">
        <div class="mb-3">
            <label for="licenseplate" class="form-label">Rendszám</label>
            <input type="text" class="form-control" id="licenseplate" name="licenseplate" value="<%= (typeof car === 'undefined') ? '' : car.plate %>">
        </div>
        <div class="mb-3">
            <label for="maker" class="form-label">Gyártó</label>
            <input type="text" class="form-control" id="maker"  name="maker" value="<%= (typeof car === 'undefined') ? '' : car.brand %>">
        </div>
        <div class="mb-3">
            <label for="length" class="form-label">Hossz</label>
            <input type="text" class="form-control" id="length" name="length" value="<%= (typeof car === 'undefined') ? '' : car.length %>">
        </div>
        <div class="mb-3">
            <label for="maxpeople" class="form-label">Max fő</label>
            <input type="text" class="form-control" id="maxpeople" name="maxpeople" value="<%= (typeof car === 'undefined') ? '' : car.capacity %>">
        </div>
        <div class="mb-3">
            <label for="trunksize" class="form-label">Csomagtér</label>
            <input type="text" class="form-control" id="trunksize" name="trunksize" value="<%= (typeof car === 'undefined') ? '' : car.trunk %>">
        </div>

        <input type="submit" class="btn btn-primary" href="/cars" value="Mentés"/>
        <a class="btn btn-danger" href="/cars">Vissza</a>
    </form>
</div>

<%- include('footer') %>