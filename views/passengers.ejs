<%- include('header') %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Utasok</h1>
            <a href="/passengers/<%= car._id %>/new">
                <button class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i>
                    Új utas
                </button>
            </a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Név</th>
                    <th>Kor</th>
                    <th>Vezetett órák</th>
                    <th>Kezelés</th>
                </tr>

                <% passengers.forEach(function(passenger) { %>
                <tr>
                    <td><%= passenger.name %></td>
                    <td><%= passenger.age %></td>
                    <td><%= passenger.hoursdriven %></td>
                    <td>
                        <a href="/passengers/<%= car._id %>/<%= passenger._id %>">
                            <button class="btn btn-secondary">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </button>
                        </a>
                        <a href="/passengers/<%= car._id %>/del/<%= passenger._id %>">
                            <button class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </a>
                    </td>
                </tr>
                <% }); %>
            </table>
            <a href="/cars"><button class="btn btn-danger">Vissza</button></a>
        </div>
    </div>
</div>

<%- include('footer') %>